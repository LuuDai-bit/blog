<%= render partial: 'shared/breadcrumbs', locals: { sites: [{name: 'New user', url: '#'}] } %>

<h1>Create New User</h1>

<%= form_with url: admin_users_path, method: :post, scope: :user do |form| %>
  <div class="form-group">
    <%= form.label :name, 'UserName' %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'User name' %>
  </div>

  <div class="form-group">
    <%= form.label :email, 'Email' %>
    <%= form.text_field :email, class: 'form-control', placeholder: 'User name' %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="form-group">
    <%= form.label :password, 'Password' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= form.password_field :password, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation, { class: 'form-control' } %>
  </div>

  <%= form.submit('Create', class: 'btn btn-primary') %>
<% end %>
