<%= render partial: 'shared/breadcrumbs', locals: { sites: [{name: 'Categories', url: '#'}] } %>

<h1>List Categories</h1>
<% if @categories.present? %>
  <div class="row">
    <% @categories.each do |category| %>
      <span class="mr-1 col-2 truncate"><%= category.name %></span>
    <% end %>
  </div>
  <div id="admin-posts-paginate" class="pagination-admin">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>

<% else %>
  <div class="mt-3 w-100 h-100vh text-center">
    NO CATEGORIES
  </div>
<% end %>
