<%= render partial: 'shared/breadcrumbs', locals: { sites: [{name: 'Comment Templates', url: '#'}] } %>

<h1 class="admin-title">Comment Templates</h1>

<div class="main-container">
  <div class="d-flex justify-content-between">
    <%= link_to(new_admin_comment_template_path, class: 'btn btn-primary') do %>
      <%= icon 'plus', library: 'boxicons' %>
      <span>New Comment Template</span>
    <% end %>
  </div>

  <% if @comment_templates.present? %>
    <table class="table table-hover table-layout-fixed w-100 mt-3 table-striped table-bordered">
      <thead>
        <tr>
          <th class="col-md-1 text-center">Id</th>
          <th class="col-md-4 text-center">Content</th>
          <th class="col-md-2 text-center">Repository</th>
          <th class="col-md-1 text-center">Created At</th>
          <th class="col-md-1 text-center">Status</th>
          <th class="col-md-1 text-center">Action</th>
        </tr>
      </thead>
      <tbody id="admin-comment-templates">
        <%= render partial: 'comment_template', collection: @comment_templates %>
      </tbody>
    </table>
    <div id="admin-posts-paginate" class="pagination-admin d-flex justify-content-center">
    </div>
  <% else %>
    <div class="mt-3 w-100 h-100vh text-center">
      NO COMMENT TEMPLATE
    </div>
  <% end %>
</div>
