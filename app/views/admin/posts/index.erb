<h1>List Post</h1>
<%= link_to('New Post', new_admin_post_path) %>
<% if @posts.present? %>
  <table>
    <tr>
      <th>Subject</th>
      <th>Author</th>
      <th></th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.subject %></td>
        <td><%= post.author&.name || 'NO AUTHOR' %></td>
        <td>
          <%= link_to 'Detail', admin_post_path(post) %>
          <%= link_to 'Edit', edit_admin_post_path(post) %>
          <%= link_to 'Destroy', admin_post_path(post), method: :delete %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  'NO POSTS'
<% end %>
