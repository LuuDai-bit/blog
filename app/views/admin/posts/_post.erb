<tr class="align-middle">
  <td class="w-40"><%= post.subject.truncate 50 %></td>
  <td class="w-10"><%= post.author&.name || 'NO AUTHOR' %></td>
  <td class="w-10"><%= status_badges post.status %></td>
  <td class="w-10"><%= english_status_badges(post) %></td>
  <td class="w-10"><%= post.views %></td>
  <td  class="w-30">
    <%= link_to 'Detail', admin_post_path(post), class: 'btn btn-light' %>
    <%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-light' %>
    <%= link_to 'Destroy',
                admin_post_path(post),
                method: :delete,
                class: 'btn btn-danger',
                data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
