<tr class="align-middle">
  <td class="w-30"><span class="text-truncate-2l"><%= post.subject %></span></td>
  <td class="w-10"><%= post.author&.name || 'NO AUTHOR' %></td>
  <td class="w-10"><%= post.type&.titleize %></td>
  <td class="w-10"><%= status_badges post.status.capitalize %></td>
  <td class="w-10"><%= english_status_badges(post) %></td>
  <td class="w-10"><%= post.views %></td>
  <td class="w-10"><%= post.release_date&.strftime('%Y/%m/%d') %></td>
  <td  class="w-30">
    <%= link_to admin_post_path(post), class: 'btn btn-light' do %>
      <%= icon 'file', library: 'boxicons' %>
    <% end %>
    <%= link_to edit_admin_post_path(post), class: 'btn btn-light' do %>
      <%= icon 'pencil', library: 'boxicons' %>
    <% end %>
    <%= button_to admin_post_path(post),
                  method: :delete,
                  class: 'btn btn-danger d-inline',
                  data: { confirm: 'Are you sure?' } do %>
      <%= icon 'trash', library: 'boxicons' %>
    <% end %>
  </td>
</tr>
