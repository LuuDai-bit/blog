<tr class="align-middle">
  <td class="w-5"><%= announcement.id %></td>
  <td class="w-60"><%= announcement.content.truncate 50 %></td>
  <td class="w-10"><%= announcement.activated %></td>
  <td  class="w-25">
    <% if announcement.activated %>
      <%= button_to 'Deactivate', admin_announcement_path(announcement), method: :patch, params: { announcement: { activated: false } }, class: 'btn btn-light' %>
    <% else %>
      <%= link_to 'Activate', '', {class: 'btn btn-light activate-announcement', data: {id: announcement.id}} %>
    <% end %>
  </td>
</tr>
