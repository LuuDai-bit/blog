<%= render partial: 'shared/breadcrumbs', locals: { sites: [{name: 'Announcements', url: '#'}] } %>

<h1 class="admin-title">Announcements</h1>
<%= link_to('New Announcement', new_admin_announcement_path, class: 'btn btn-primary') %>
<% if @announcements.present? %>
  <table class="table table-hover mt-3 table-striped table-bordered">
    <thead>
      <tr>
        <th class="col-md-3 text-center">Id</th>
        <th class="col-md-2 text-center">Content</th>
        <th class="col-md-1 text-center">Activated</th>
        <th class="col text-center">Action</th>
      </tr>
    </thead>
    <tbody id="admin-posts">
      <%= render partial: :announcement, collection: @announcements %>
    </tbody>
  </table>
  <div id="admin-posts-paginate" class="pagination-admin d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% else %>
  <div class="mt-3 w-100 h-100vh text-center">
    NO ANNOUNCEMENTS
  </div>
<% end %>
<%= render partial: 'announcement_duration_modal' %>
