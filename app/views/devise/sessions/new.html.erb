<div class="text-center justify-content-center small-content-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="form-outline mb-4">
        <%= f.label :email, { class: 'form-label', for: 'email' } %>
        <%= f.email_field :email, { autofocus: true, class: 'form-control', id: 'email' } %>
      </div>

      <div class="form-outline mb-4 col-xs-4">
        <%= f.label :password, { class: 'form-label', for: 'password' } %>
        <%= f.password_field :password, { class: 'form-control', id: 'password' } %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary btn-block mb-4" %>
      </div>

      <div class="col">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end %>
      </div>
    </div>
  <% end %>
</div>
