<%= form_with url: user_posts_path,
              class: "col-md-10 col-lg-8 col-xl-7",
              method: :get,
              local: false do |form| %>
  <div class="mb-2rem">
    <%= form.text_field :search_text, class: 'form-control leaf-input', placeholder: I18n.t("posts.search.search_text_place_holder") %>
    <%= form.submit 'Search', class: 'd-none' %>
  </div>
<% end %>
