<div class="post-preview">
  <%= link_to user_post_path(post) do %>
    <h3 class="post-title"><%= post.subject %></h2>
  <% end %>
  <p class="post-meta">
      <%= t('posts.post_by') %>
      <%= link_to 'Lưu Đại', about_path %>
      <%= t('posts.at') %> <%= post.created_at.strftime('%d-%m-%Y') %>
  </p>
</div>

<hr class="my-4" />
