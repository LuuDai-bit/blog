<div class="post-preview">
  <%= link_to user_post_path(post), class: "position-relative" do %>
    <h3 class="post-title d-inline"><%= default_locale? ? post.subject : post.subject_en %>
    </h3>
  <% end %>
  <div>
    <% post.categories.each do |category| %>
      <span class="user-category">#<%= category.name %></span>
      <%= link_to("##{category.name}", user_posts_path(category_name: category.name), class: 'user-category') %>
    <% end %>
  </div>
  <p class="post-meta">
    <%= t('posts.post_by') %>
    <%= link_to 'Lưu Đại', about_path %>
    <%= t('posts.at') %> <%= post.created_at.strftime('%d-%m-%Y') %>
  </p>
</div>

<hr class="my-4" />
